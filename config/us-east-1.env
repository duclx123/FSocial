# Smart Cooking MVP - us-east-1 Configuration
# Source this file before deployment: source config/us-east-1.env

# Primary deployment region
export AWS_REGION=us-east-1
export CDK_DEFAULT_REGION=us-east-1

# Cross-region service configurations
export BEDROCK_REGION=us-east-1  # Bedrock available locally!
# Custom domain configuration (optional)
export DOMAIN_NAME=${DOMAIN_NAME:-"awssmartcookingss.com"}  # Set your domain here
export CREATE_HOSTED_ZONE=${CREATE_HOSTED_ZONE:-"true"}  # Create new hosted zone
# export CERTIFICATE_ARN=  # Leave empty to create new certificate at us-east-1

# Environment
export ENVIRONMENT=prod

# Application configuration
export LOG_LEVEL=INFO
export NODE_ENV=production

# Performance tuning for cross-region
export AI_TIMEOUT=8000  # Increased timeout for cross-region Bedrock calls
export API_TIMEOUT=30000  # Increased API timeout

# Cost optimization
export ENABLE_CACHING=true
export CACHE_TTL=3600  # 1 hour cache for AI responses

# Monitoring
export ENABLE_XRAY=true
export ENABLE_DETAILED_MONITORING=true

# Security
export ENABLE_WAF=true
export ENABLE_ENCRYPTION=true

echo "Environment configured for us-east-1 deployment"
echo "Primary region: $AWS_REGION"
echo "Bedrock region: $BEDROCK_REGION (local)"
echo "Domain: ${DOMAIN_NAME:-"Default CloudFront domain"}"
echo "Certificate: Will be created at us-east-1 (auto-replicated to us-east-1 for CloudFront)"
echo ""
echo "Note: AI operations optimized with local Bedrock - expect 40-50% faster generation!"
echo "Expected impact: +180-250ms for AI generation"